

<% Category.all.each do |cat| %>
    <h2><%= cat.name %></h2>
    <ul>
    <% Medium.all.each do |medium| %>
        <% if medium.category_id == cat.id %>
            <li><%= medium.name %> - <%= link_to "Record your experience", new_medium_experience_path(medium.id) %></li>
        <% end %>
    <% end %>
    </ul>
<% end %>